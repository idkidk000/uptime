{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build", "!samples"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "linter": {
    "domains": {
      "next": "recommended",
      "project": "recommended",
      "react": "recommended"
    },
    "enabled": true,
    "includes": ["**", "!playground/**"],
    "rules": {
      "correctness": {
        "noUnusedImports": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        },
        "useExhaustiveDependencies": {
          "level": "warn",
          "options": {
            "hooks": [
              {
                "name": "useModal",
                "stableResult": true
              }
            ],
            "reportMissingDependenciesArray": true
          }
        }
      },
      "performance": {
        "noImgElement": "off"
      },
      "recommended": true,
      "suspicious": {
        "noAsyncPromiseExecutor": "warn",
        "noConsole": "warn",
        "noEmptyBlock": "warn",
        "noEmptyBlockStatements": "warn",
        "useAwait": "warn"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
